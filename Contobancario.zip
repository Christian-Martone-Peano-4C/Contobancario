public class Contobancario {

    protected String Numconto;
    protected int Bilancioconto;

    public Contobancario(String Numconto) {
        this.Numconto = Numconto;
        this.Bilancioconto = 0;
    }

    public Contobancario(String Numconto, int Bilancioconto) {
        this.Numconto = Numconto;
        this.Bilancioconto = Bilancioconto;
    }

    public String getNumconto() {
        return Numconto;
    }

    public int getBilancioconto() {
        return Bilancioconto;
    }

    public void deposito(int denaro) {
        this.Bilancioconto = this.Bilancioconto + denaro;

    }

    public void prelievo(int denaro) {
        if (denaro <= this.Bilancioconto) {
            this.Bilancioconto -= denaro;
        } else {
            System.out.println("errore: fondi insufficienti");
        }

    }

}
